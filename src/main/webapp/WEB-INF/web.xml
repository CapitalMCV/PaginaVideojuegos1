<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>adminProducto</servlet-name>
        <servlet-class>controlador.adminProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>dao.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlCliente</servlet-name>
        <servlet-class>controlador.controlCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlProducto</servlet-name>
        <servlet-class>controlador.controlProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet</servlet-name>
        <servlet-class>controlador.servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminProducto</servlet-name>
        <url-pattern>/adminProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlCliente</servlet-name>
        <url-pattern>/controlCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlProducto</servlet-name>
        <url-pattern>/controlProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>

